FROM node:18-alpine

WORKDIR /app

# Install curl for healthchecks and bash for scripts
RUN apk add --no-cache curl bash

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source
COPY . .

# Initial build
RUN npm run build

# Expose the port
EXPOSE 3000

# Run webpack watch in background + compiled server with nodemon
# Nodemon watches dist/ and restarts when webpack rebuilds
CMD ["sh", "-c", "npm run dev & npx nodemon --watch dist --exec 'node dist/server.js'"]
